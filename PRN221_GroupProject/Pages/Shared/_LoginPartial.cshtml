@using Microsoft.AspNetCore.Identity
@using PRN221_GroupProject.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav d-flex flex-row justify-content-evenly">
    <a class="me-3 cart-link" asp-page="/cart/index">
        <button class="cart-btn">
            <i class="fa fa-shopping-cart cart-icon"></i>Cart
        </button>
    </a>
    @if (SignInManager.IsSignedIn(User))
    {
        @* Sign in and Cart buttons *@
        <div class="dropdown m-0">

            <a class="sign-in-link" asp-area="Identity" asp-page="/Account/Login" role="button" id="dropdownMenuLink"
                data-bs-toggle="dropdown" aria-expanded="false">
                <button class="sign-in-btn">
                    <div class="d-flex align-items-center" style="padding: 8px">

                        <div class="text-truncate" style="max-width:100px;">
                            @UserManager.GetUserName(User)!
                        </div>

                        <span class="dropdown-toggle"></span>
                    </div>
                </button>
            </a>

            <ul class="dropdown-menu dropdown-menu-end text-center" aria-labelledby="dropdownMenuLink">
                @* manage account option *@
                <li class="nav-item">
                    <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index"
                        title="Manage">
                        Manage
                    </a>
                </li>
                @* logout option *@
                <li class="nav-item">
                    <form id="logoutForm" class="form-inline d-flex justify-content-center" asp-area="Identity"
                        asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    }
    else
    {
        @* <li class="nav-item">
    <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
    <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li> *@
        <a class="sign-in-link" asp-area="Identity" asp-page="/Account/Login">
            <button class="sign-in-btn">
                <i class="fa fa-user signin-icon"></i>Sign in
            </button>
        </a>
    }
</ul>
