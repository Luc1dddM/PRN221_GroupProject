@page
@model PRN221_GroupProject.Pages.Products.AddColorsModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddColors</title>
</head>
<body>

    <h4>ProductCategory</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="ProductCategory.ProductId" value="@ViewBag.ProductId" />


                <div class="form-group">
                    <label asp-for="ProductCategory.CategoryId">Category</label>
                    <select asp-for="ProductCategory.CategoryId" class="form-control" name="categories">
                        @foreach (var category in Model.Colors)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }


                    </select>
                    <span asp-validation-for="ProductCategory.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductCategory.Quantity" class="control-label"></label>
                    <input asp-for="ProductCategory.Quantity" class="form-control" />
                    <span asp-validation-for="ProductCategory.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group form-check form-switch">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ProductCategory.Status" /> @Html.DisplayNameFor(model => model.ProductCategory.Status)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
