@page
@model PRN221_GroupProject.Pages.Products.EditProductCategoryModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditProductCategory</title>
</head>
<body>

    <h4>ProductCategory</h4>
    <hr />
    <div class="row">
        <!-- List Category was choosed -->
        <div class="p-4 col-md-6">
            <div style="height: 400px;overflow: auto;">
                <table class="table border">
                    <thead class=" thead-light sticky-top d-block">
                        <tr class="d-flex bd-highlight">
                            <th class=" text-left p-3 w-100 bd-highlight" scope="col">Category Name</th>
                            <th class=" text-right p-3 w-90 flex-shrink-1 bd-highlight" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var category in Model.ChoosedCategories)
                        {
                            <tr class="d-block">
                                <td class="text-left p-3 w-100 bd-highlight" scope="row">@category.Name</td>
                                <td onclick="cfDelete('@ViewBag.ProductId','@category.CategoryId')"><button class="btn btn-danger">Delete</button></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <!-- edit form -->
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductCategory.ProductId" value="@ViewBag.ProductId" />

                <div class="form-group">
                    <label asp-for="Categories">Category</label>
                    <select asp-for="Categories" class="form-control" name="categories">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }


                    </select>
                    
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <script type="text/javascript">
        function cfDelete(part_id, category_id) {
            if (confirm("Do you want to delete this category?")) {
                window.location = "/Products/EditProductCategory?ProductId=" + part_id + "&categoryId=" + category_id;
            }
        }
    </script>
</body>
</html>
