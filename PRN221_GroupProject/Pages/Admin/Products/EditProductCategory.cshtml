@page
@model PRN221_GroupProject.Pages.Products.EditProductCategoryModel

@{
    ViewData["Title"] = "Edit";
}


<body>
    <div class="container">
        <div class="p-3 mb-2 bg-white text-dark rounded">
            <div class="header-form">
                <div>
                    <a asp-page="Index" class="back-link text-reset">
                        <i class="fa-solid fa-chevron-left"></i>
                    </a>
                </div>
            </div>
            <div class="row">
                <!-- List Category was choosed -->
                <div class="p-4 col-md-6">
                    <div style="height: 400px;overflow: auto;">
                        <table class="table border">
                            <thead class=" thead-light sticky-top d-block">
                                <tr class="d-flex bd-highlight">
                                    <th class=" text-left p-3 w-100 bd-highlight" scope="col">Category Name</th>
                                    <th class=" text-right p-3 w-90 flex-shrink-1 bd-highlight" scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var category in Model.ChoosedCategories)
                                {
                                    <tr class="d-block">
                                        <td class="text-left p-3 w-100 bd-highlight" scope="row">@category.Name</td>
                                        <td onclick="cfDelete('@ViewBag.ProductId','@category.CategoryId')"><button class="btn btn-danger">Delete</button></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- edit form -->
                @if (Model.hasBrand || Model.hasDevice)
                {

                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ProductCategory.ProductId" value="@ViewBag.ProductId" />
                            @if (Model.hasBrand)
                            {
                                <div class="form-group">
                                    <label asp-for="brand">Brand</label>
                                    <select asp-for="brand" class="form-control">
                                        @foreach (var category in Model.Brands)
                                        {
                                            <option value="@category.CategoryId">@category.Name</option>
                                        }


                                    </select>
                                    <span asp-validation-for="brand" class="text-danger"></span>

                                </div>
                            }
                            @if (Model.hasDevice)
                            {
                                <div class="form-group">
                                    <label asp-for="device">Device</label>
                                    <select asp-for="device" class="form-control">
                                        @foreach (var category in Model.Devices)
                                        {
                                            <option value="@category.CategoryId">@category.Name</option>
                                        }


                                    </select>
                                    <span asp-validation-for="device" class="text-danger"></span>

                                </div>
                            }


                            <div class="form-group mt-2">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>

</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<script type="text/javascript">
    function cfDelete(part_id, category_id) {
        if (confirm("Do you want to delete this category?")) {
            window.location = "/Admin/Products/EditProductCategory?ProductId=" + part_id + "&categoryId=" + category_id;
        }
    }
</script>
