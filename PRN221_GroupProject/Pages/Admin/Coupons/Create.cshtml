@page
@model PRN221_GroupProject.Pages.Coupons.CreateModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    @* Bootstrap *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>

<h4>Coupon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Coupon.CouponCode" class="control-label">Coupon Code</label>
                    <input asp-for="Coupon.CouponCode" class="form-control" oninput="hideError('error-message')" />
                <span asp-validation-for="Coupon.CouponCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Coupon.DiscountAmount" class="control-label">Discount Amount</label>
                    <input asp-for="Coupon.DiscountAmount" class="form-control" onfocus="clearError('error-message')" />
                    <span asp-validation-for="Coupon.DiscountAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Coupon.MinAmount" class="control-label">Min Amount</label>
                    <input asp-for="Coupon.MinAmount" class="form-control" onfocus="clearError('error-message')" />
                <span asp-validation-for="Coupon.MinAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Coupon.MaxAmount" class="control-label">Max Amount</label>
                    <input asp-for="Coupon.MaxAmount" class="form-control" onfocus="clearError('error-message')" />
                <span asp-validation-for="Coupon.MaxAmount" class="text-danger" ></span>
            </div>

                <div class="form-group form-check form-switch">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Coupon.Status" checked/> @Html.DisplayNameFor(model => model.Coupon.Status)
                    </label>
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
</body>

</html>
